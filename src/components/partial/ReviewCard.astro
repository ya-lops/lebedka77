---
const { data } = Astro.props;
---

<section class="app-review-card +frame">
  <div class="_inner">
    <div class="_name">{data.name}</div>
    <p class="_text">"{data.text}"</p>
    <div class="_date">{data.date}</div>
  </div>
</section>

<style lang="scss">
  .app-review-card {
    ._inner {
      display: grid;
      grid-template-columns: 100%;
      grid-template-rows: auto minmax(0, 1fr) auto;
      justify-items: center;
      justify-content: center;
      background: var(--color-surface-0);
      gap: 1.6rem 2.4rem;
      padding: 5rem;
      height: 100%;
      border-radius: var(--radius-3);

      @media (width < 576px) {
        padding: 2rem;
      }
    }

    // ._image {
    //   width: 64px;
    //   aspect-ratio: 1;

    //   img {
    //     width: 100%;
    //     height: 100%;
    //     border-radius: 50%;
    //     overflow: crop;
    //     object-fit: cover;
    //     border-radius: var(--radius-3);
    //   }
    // }

    ._name {
      font-size: 2rem;
      font-weight: 500;
      color: var(--color-accent);
    }

    ._text {
      align-self: center;
      font-style: italic;
    }
  }
</style>
