---
import { Image } from 'astro:assets';
import logoImage from '@/images/logo.jpg';

interface Props {
  size?: "s" | "m" | "l";
}

const { size = "s" } = Astro.props;
---

<div class:list={["app-logo", { "+m": size == "m", "+l": size == "l" }]}>
  <div class="_media">
    <img src="/images/logo.webp" width="64" height="64" alt="Лебедка77 - логотип, на котором изображен внедорожник в грязи"/>
  </div>
  <div class="_text">
    Лебёдка<mark>77</mark>
  </div>
</div>

<style lang="scss">
  .app-logo {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-shrink: 0;
    color: var(--color-text-primary);
    
    font-family: 'Comforter Brush', cursive;
    font-size: clamp(2.4rem, 2vw, 3.6rem);
    font-weight: 500;
    user-select: none;
    outline: none;

    &.\+m {
      max-width: 150px;
    }

    &.\+l {
      max-width: 180px;
    }

    ._media {
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--color-accent);
      font-size: 3rem;
      max-width: 100%;
      height: 45px;
      aspect-ratio: 1;

      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 6px;
      }
    }
  }
</style>
